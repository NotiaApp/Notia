<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Sidebar" parent="GtkRevealer">
    <property name="transition-type">slide-left</property>
    <property name="transition-duration">300</property>
    <property name="reveal-child">True</property>
    <property name="child">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="margin-start">6</property>
        <property name="margin-end">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <!-- Kenar Çubuğu Başlık -->
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Fotoğraf Notları</property>
            <property name="description" translatable="yes">Seçili fotoğrafa not ekleyin</property>
          </object>
        </child>
        <!-- Seçili Fotoğraf Önizlemesi -->
        <child>
          <object class="GtkFrame">
            <property name="margin-bottom">12</property>
            <property name="child">
              <object class="GtkPicture" id="selected_photo_preview">
                <property name="height-request">200</property>
                <property name="content-fit">contain</property>
              </object>
            </property>
          </object>
        </child>
        <!-- Fotoğraf Bilgisi -->
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <property name="margin-bottom">12</property>
            <child>
              <object class="GtkLabel">
                <property name="label">Seçili fotoğraf:</property>
                <style>
                  <class name="caption"/>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="photo_label">
                <property name="label">Seçili Fotoğraf</property>
                <property name="ellipsize">end</property>
                <property name="hexpand">True</property>
                <property name="max-width-chars">25</property>
                <style>
                  <class name="caption"/>
                  <class name="accent"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <!-- Not Durumu -->
        <child>
          <object class="GtkLabel" id="note_label">
            <property name="label">Henüz not eklenmemiş</property>
            <property name="halign">start</property>
            <property name="margin-bottom">6</property>
            <style>
              <class name="caption"/>
              <class name="dim-label"/>
            </style>
          </object>
        </child>
        <!-- Not Metin Alanı -->
        <child>
          <object class="GtkScrolledWindow">
            <property name="height-request">250</property>
            <property name="vexpand">True</property>
            <property name="child">
              <object class="GtkTextView" id="note_text_view">
                <property name="wrap-mode">word</property>
                <property name="left-margin">12</property>
                <property name="right-margin">12</property>
                <property name="top-margin">12</property>
                <property name="bottom-margin">12</property>
              </object>
            </property>
          </object>
        </child>
        <!-- Tag Alanı -->
        <child>
          <object class="GtkBox" id="tag_box">
            <property name="orientation">vertical</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkBox" id="tag_chip_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">4</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkEntry" id="tag_entry">
                    <property name="placeholder-text">Etiket ekle...</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="add_tag_button">
                    <property name="label">Ekle</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <!-- Not Eylem Düğmeleri -->
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <property name="halign">end</property>
            <property name="homogeneous">True</property>
            <property name="margin-top">12</property>
            <child>
              <object class="GtkButton" id="clear_note_button">
                <property name="label">Temizle</property>
                <style>
                  <class name="destructive-action"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="save_note_button">
                <property name="label">Notu Kaydet</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
